<div style="margin-top: 50px; width: 40%; margin-left: auto; margin-right: auto; background-color: lightgrey; padding: 50px;" class="rounded" class="border border-light">
	<h1>Bienvenue sur la page de login</h1>
	<p>Veuillez vous authentifier :</p>

	<%= form_for :formulaire_login do |f| %>
	  <div class="form-group">
			<%= f.label :email, "Email" %>
			<br />
			<%= f.text_field :email, placeholder: "Votre adresse e-mail...", class: "form-control" %>
  	</div>
	  <div class="form-group">
		<%= f.label :password, "Password" %>
		<br />
		<%= f.password_field :password, placeholder: "Votre mot de passe...", class: "form-control" %>
  	</div>

		<%= f.submit "Login", class:"btn btn-success" %>

	<% end %>
</div>